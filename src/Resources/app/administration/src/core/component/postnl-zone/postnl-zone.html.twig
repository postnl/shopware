{% block sw_condition_value_content %}
    <div class="sw-condition-sales-channel sw-condition__condition-value">
        {% block sw_condition_postnl_zone_field_operator %}
            <sw-condition-operator-select
                v-bind="{ operators, condition }"
                :disabled="disabled"
            />
        {% endblock %}

        {% block sw_condition_postnl_zone_field_values %}
            <sw-multi-select
                v-if="!isEmpty"
                size="medium"
                :value="postNLZones"
                :disabled="disabled"
                :options="zones"
                @change="setPostNLZones"
            />
        {% endblock %}
    </div>
{% endblock %}
