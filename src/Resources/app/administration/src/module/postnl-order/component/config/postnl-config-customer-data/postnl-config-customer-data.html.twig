{% block memo_config_content %}
    <postnl-memo-collapse :disabled="disabled">
        <template #header>
            {{ content.customerNumber }} {{ content.customerCode }}

            <template v-if="content.globalPackCustomerCode || content.globalPackBarcodeType">
                &mdash; {{ $t('postnl.config.customerData.globalPack') }}: {{ content.globalPackBarcodeType }} {{ content.globalPackCustomerCode }}
            </template>
        </template>
        <template #content="{ disabled }">
            <sw-container
                columns="repeat(2, 1fr)"
                gap="0 16px"
            >
                <sw-text-field
                    v-model:value="content.customerNumber"
                    required
                    :label="$t('postnl.config.customerData.customerNumber')"
                    :disabled="disabled"
                />

                <sw-text-field
                    v-model:value="content.customerCode"
                    required
                    :label="$t('postnl.config.customerData.customerCode')"
                    :disabled="disabled"
                />

                <sw-text-field
                    v-model:value="content.globalPackBarcodeType"
                    required
                    :label="$t('postnl.config.customerData.globalPackBarcodeType')"
                    :disabled="disabled"
                />

                <sw-text-field
                    v-model:value="content.globalPackCustomerCode"
                    required
                    :label="$t('postnl.config.customerData.globalPackCustomerCode')"
                    :disabled="disabled"
                />
            </sw-container>

            <postnl-required-hint textAlign="right" />
        </template>
    </postnl-memo-collapse>
{% endblock %}
