{% block sw_collapse_panel_header %}
<!-- eslint-disable-next-line vuejs-accessibility/click-events-have-key-events -->
<div class="memo-collapse__header"
     :class="headerClass"
     @click="collapseItem">
    {% block memo_collapse_title %}
        <div class="memo-collapse__title">
            <slot name="header" v-bind="{ expanded, disabled }">
                {% block memo_collapse_panel_title_slot %}{% endblock %}
            </slot>
        </div>
    {% endblock %}

    {% block memo_collapse_buttons %}
        <div class="memo-collapse__indicator">
            <sw-icon
                v-if="expanded"
                name="small-arrow-large-down"
                class="memo-collapse__button"
                :class="collapseButtonClass"
            />
            <sw-icon
                v-else
                name="small-arrow-large-left"
                class="memo-collapse__button"
                :class="expandButtonClass"
            />
        </div>
    {% endblock %}
</div>
{% endblock %}

{% block sw_collapse_panel_content %}
<div v-if="expanded" class="memo-collapse__content">
    <slot name="content" v-bind="{ expanded, disabled }">
        {% block memo_collapse_panel_content_slot %}{% endblock %}
    </slot>
</div>
{% endblock %}
