{% block memo_config %}
    <component v-if="senderCountry?.iso === sourceZone"
               v-bind="$attrs"
               :is="field"
               :disabled="disabled"
               :required="required"
               @inheritance-restore="$emit('inheritance-restore', $event)"
               @inheritance-remove="$emit('inheritance-remove', $event)">
        <template #sw-field-input="{ identification, error, disabled, required }">
            {% block memo_config_content %}
                <memo-collapse :disabled="disabled">
                    <template #header>
                        <template v-if="isAlt">

                            <template v-if="content.enabled">
                                <template v-if="showProductCode">
                                    {{ $tc('postnl.config.productSelection.headerDebug', 0, {
                                        name: product?.name,
                                        code: product?.productCodeDelivery,
                                        amount: content.cartAmount
                                    }) }}
                                </template>

                                <template v-else>
                                    {{ $tc('postnl.config.productSelection.header', 0, {
                                        name: product?.name,
                                        amount: content.cartAmount
                                    }) }}
                                </template>
                            </template>

                            <template v-else>
                                {{ $tc('postnl.config.productSelection.headerAltDisabled') }}
                            </template>

                        </template>

                        <template v-else>

                            <template v-if="showProductCode">
                                {{ $tc('postnl.config.productSelection.headerDebug', 0, {
                                    name: product?.name,
                                    code: product?.productCodeDelivery
                                }) }}
                            </template>

                            <template v-else>
                                {{ $tc('postnl.config.productSelection.header', 0, {
                                    name: product?.name,
                                }) }}
                            </template>

                        </template>
                    </template>
                    <template #content="{ disabled }">
                        <sw-container>
                            <sw-container v-if="isAlt" columns="1fr 1fr" gap="16px">
                                <sw-switch-field v-model="content.enabled"
                                                 size="small"
                                                 :label="$tc('postnl.config.productSelection.enableAltProduct')"
                                                 :disabled="disabled"/>

                                <sw-number-field v-if="content.enabled"
                                                 v-model="content.cartAmount"
                                                 size="small"
                                                 :label="$tc('postnl.config.productSelection.altProductAmount')"
                                                 :disabled="disabled"/>
                            </sw-container>

                            <postnl-product-selection v-if="!isAlt || content.enabled"
                                                      v-model="content.id"
                                                      :sourceZone="sourceZone"
                                                      :destinationZone="destinationZone"
                                                      :deliveryType="deliveryType"
                                                      :showDeliveryType="false"
                                                      :showProductCode="showProductCode"
                                                      :disabled="disabled"/>
                        </sw-container>
                    </template>
                </memo-collapse>
            {% endblock %}
        </template>
    </component>
{% endblock %}

