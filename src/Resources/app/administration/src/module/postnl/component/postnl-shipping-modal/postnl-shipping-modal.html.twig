<sw-modal class="postnl-shipping-modal"
          title="Hello"
          :closable="!isProcessing"
          @modal-close="closeModal">
    <sw-container>

        <template v-if="isBulk">
            <sw-switch-field v-model="isOverrideProduct"
                             label="Override PostNL product"
                             size="small"
                             noMarginTop/>
        </template>

        <postnl-product-selection :disabled="!isOverrideProduct"
                                  v-model="overrideProductId"/>

        <sw-switch-field v-if="!autoConfirmShipments"
                         v-model="confirmShipments"
                         label="Confirm Shipments"
                         size="small"
                         noMarginTop/>
        <sw-switch-field v-model="downloadLabels"
                         label="Download shipping labels"
                         size="small"
                         noMarginTop/>
    </sw-container>

    <template #modal-footer>
        <sw-button size="small"
                   :disabled="isProcessing"
                   @click="closeModal">
            Cancel
        </sw-button>
        <sw-button-process size="small"
                           variant="primary"
                           :animationTimeout="2500"
                           :isLoading="isProcessing"
                           :processSuccess="shipmentsSent"
                           @click="sendShipments"
                           @process-finish="shipmentsSent = false">
            Send Shipment
        </sw-button-process>
    </template>
</sw-modal>
