<sw-container class="postnl-product-selection">

    <sw-label variant="neutral">{{ product.productCodeDelivery }} {{ product.name }}</sw-label>

    <sw-single-select v-if="showDeliveryType"
                      v-model="actualDeliveryType"
                      :options="deliveryTypes"
                      :disabled="deliveryTypes.length == 0"
                      @change="onChangeDeliveryType"/>

    <sw-container columns="1fr 1fr" gap="0 16px">
        <sw-switch-field v-for="flag in flags"
                         v-if="flag.visible"
                         v-model="flag.selected"
                         :key="flag.name"
                         :label="flag.name"
                         :disabled="flag.disabled"
                         @change="onChangeFlag(flag.name)"
                         size="small"
                         noMarginTop/>
    </sw-container>

    <sw-loader v-if="isLoading"/>
</sw-container>

