<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="postnl_shipments.logger" class="Symfony\Bridge\Monolog\Logger">
            <argument>PostNL</argument>

            <argument type="collection">
                <argument type="service" id="postnl_shipments.logger.handler.file"/>
                <argument type="service" id="postnl_shipments.logger.handler.sql"/>
            </argument>

            <argument type="collection">
                <argument type="service" id="postnl_shipments.logger.processor.uid"/>
                <argument type="service" id="postnl_shipments.logger.processor.introspection"/>
                <argument type="service" id="postnl_shipments.logger.processor.web"/>
                <argument type="service" id="postnl_shipments.logger.processor.console"/>
                <argument type="service" id="postnl_shipments.logger.processor.route"/>

                <!-- Custom processors, should run after web processor -->
                <argument type="service" id="postnl_shipments.logger.processor.ip_anonymize"/>
                <argument type="service" id="postnl_shipments.logger.processor.session"/>
            </argument>
        </service>

        <!-- Handler Factory -->
        <service id="PostNL\Shipments\Service\Monolog\PostNLHandlerFactory">
        </service>

        <!-- Handlers -->
        <service id="postnl_shipments.logger.handler.file" class="Monolog\Handler\RotatingFileHandler">
            <factory service="PostNL\Shipments\Service\Monolog\PostNLHandlerFactory" method="createFileHandler"/>
            <argument>%kernel.logs_dir%/postnl_%kernel.environment%.log</argument>
            <argument>14</argument>
        </service>

        <service id="postnl_shipments.logger.handler.sql" class="Shopware\Core\Framework\Log\Monolog\DoctrineSQLHandler">
            <factory service="PostNL\Shipments\Service\Monolog\PostNLHandlerFactory" method="createSQLHandler"/>
        </service>

        <!-- Processors -->
        <service id="postnl_shipments.logger.processor.uid" class="Monolog\Processor\UidProcessor"/>

        <service id="postnl_shipments.logger.processor.introspection" class="Monolog\Processor\IntrospectionProcessor">
            <argument>400</argument>
        </service>

        <service id="postnl_shipments.logger.processor.web" class="Symfony\Bridge\Monolog\Processor\WebProcessor"/>

        <service id="postnl_shipments.logger.processor.console" class="Symfony\Bridge\Monolog\Processor\ConsoleCommandProcessor">
            <argument>true</argument>
            <argument>true</argument>
        </service>

        <service id="postnl_shipments.logger.processor.route" class="Symfony\Bridge\Monolog\Processor\RouteProcessor"/>


        <!-- Custom Processors -->
        <service id="postnl_shipments.logger.processor.ip_anonymize" class="PostNL\Shipments\Service\Monolog\Processor\AnonymizeIPProcessor">
            <argument>*</argument>
        </service>

        <service id="postnl_shipments.logger.processor.session" class="PostNL\Shipments\Service\Monolog\Processor\SessionProcessor">
            <argument type="service" id="session"/>
        </service>
    </services>
</container>
