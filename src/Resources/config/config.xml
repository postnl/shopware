<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>API</title>
        <title lang="de-DE">API</title>
        <title lang="nl-NL">API</title>

        <input-field type="password">
            <name>productionApiKey</name>
            <copyable>true</copyable>
            <label>Production API Key</label>
            <label lang="de-DE">Produktions-API-Schlüssel</label>
            <label lang="nl-NL">Productie API Key</label>
        </input-field>

        <input-field type="password">
            <name>sandboxApiKey</name>
            <copyable>true</copyable>
            <label>Sandbox API Key</label>
            <label lang="de-DE">Sandbox-API-Schlüssel</label>
            <label lang="nl-NL">Sandbox API Key</label>
        </input-field>

        <input-field type="single-select">
            <name>apiMode</name>
            <label>API mode</label>
            <label lang="de-DE">API-Modus</label>
            <label lang="nl-NL">API modus</label>
            <defaultValue>production</defaultValue>
            <options>
                <option>
                    <id>production</id>
                    <name>Production</name>
                    <name lang="de-DE">Production</name>
                    <name lang="nl-NL">Productie</name>
                </option>
                <option>
                    <id>sandbox</id>
                    <name>Sandbox</name>
                    <name lang="de-DE">Sandbox</name>
                    <name lang="nl-NL">Sandbox</name>
                </option>
            </options>
        </input-field>

        <component name="postnl-config-customer-data">
            <name>customerData</name>
            <label>Customer data</label>
            <label lang="de-DE">Label missing</label>
            <label lang="nl-NL">Klantgegevens</label>
        </component>

        <component name="postnl-config-api-credentials-test">
            <name>apiTestButton</name>
            <label>API Connection test</label>
            <label lang="de-DE">API Verbindung testen</label>
            <label lang="nl-NL">API Verbinding testen</label>
        </component>
    </card>

    <card>
        <title>Addresses</title>
        <title lang="de-DE">Adressen</title>
        <title lang="nl-NL">Adressen</title>

        <component name="postnl-config-sender-address">
            <name>senderAddress</name>
            <label>Sender address</label>
            <label lang="de-DE">Absender-Adresse</label>
            <label lang="nl-NL">Adres afzender</label>
        </component>

        <component name="postnl-config-return-address">
            <name>returnAddress</name>
            <label>Return address</label>
            <label lang="de-DE">Absender-Adresse</label>
            <label lang="nl-NL">Adres afzender</label>
        </component>
    </card>

    <card>
        <title>Default Products</title>
        <title lang="de-DE">Default Products</title>
        <title lang="nl-NL">Standaard Producten</title>

        <component name="postnl-config-product-selection-shipment-nl-nl-default">
            <name>productShipmentNlNlDefault</name>
            <label>Shipment NL to NL - Default product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>
        <component name="postnl-config-product-selection-shipment-nl-nl-alternative">
            <name>productShipmentNlNlAlternative</name>
            <label>Shipment NL to NL - Alternative product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>

        <component name="postnl-config-product-selection-pickup-nl-nl-default">
            <name>productPickupNlNlDefault</name>
            <label>Pickup NL to NL - Default product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>

        <component name="postnl-config-product-selection-shipment-nl-be-default">
            <name>productShipmentNlBeDefault</name>
            <label>Shipment NL to BE - Default product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>
        <component name="postnl-config-product-selection-shipment-nl-be-alternative">
            <name>productShipmentNlBeAlternative</name>
            <label>Shipment NL to BE - Alternative product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>

        <component name="postnl-config-product-selection-pickup-nl-be-default">
            <name>productPickupNlBeDefault</name>
            <label>Pickup NL to BE - Default product</label>
            <label lang="de-DE">Test</label>
            <label lang="nl-NL">test</label>
        </component>
    </card>

    <card>
        <title>Labels</title>
        <title lang="de-DE">Labels</title>
        <title lang="nl-NL">Labels</title>

        <input-field type="single-select">
            <name>printerFormat</name>
            <label>Paper size</label>
            <label lang="de-DE">Formaat</label>
            <label lang="nl-NL">Formaat</label>
            <helpText>Labels are always printed in A6. When selecting A4 you can print 4 labels on one page</helpText>
            <helpText lang="de-DE">Labels werden immer in A6 gedruckt. Wenn Sie A4 wählen, können Sie 4 Etiketten auf eine Seite drucken</helpText>
            <helpText lang="nl-NL">Labels worden altijd in A6 afgedrukt. Als u A4 selecteert, kunt u 4 etiketten op één pagina afdrukken</helpText>
            <defaultValue>a4</defaultValue>
            <options>
                <option>
                    <id>a4</id>
                    <name>A4</name>
                </option>
                <option>
                    <id>a6</id>
                    <name>A6</name>
                </option>
            </options>
        </input-field>

        <input-field type="single-select">
            <name>printerA6Orientation</name>
            <label>A6 orientation</label>
            <label lang="de-DE">A6-Ausrichtung</label>
            <label lang="nl-NL">A6 papier indeling</label>
            <defaultValue>L</defaultValue>
            <options>
                <option>
                    <id>L</id>
                    <name>Landscape</name>
                    <name lang="de-DE">Querformat</name>
                    <name lang="nl-NL">Liggend</name>
                </option>
                <option>
                    <id>P</id>
                    <name>Portrait</name>
                    <name lang="de-DE">Hochformat</name>
                    <name lang="nl-NL">Staand</name>
                </option>
            </options>
        </input-field>
    </card>

    <card>
        <title>Other</title>
        <title lang="de-DE">Other</title>
        <title lang="nl-NL">Other</title>

        <input-field type="bool">
            <name>debugMode</name>
            <label>Debug mode</label>
            <label lang="de-DE">Debug-Modus</label>
            <label lang="nl-NL">Debug modus</label>
            <helpText>Debug mode logs more data. This can be used to diagnose possible problems</helpText>
            <helpText lang="de-DE">Im Debug-Modus werden mehr Daten erfasst. Dies kann zur Diagnose möglicher Probleme verwendet werden</helpText>
            <helpText lang="nl-NL">De Debug-modus logt meer gegevens. Dit kan worden gebruikt om mogelijke problemen te diagnosticeren</helpText>
            <defaultValue>false</defaultValue>
        </input-field>
    </card>
</config>
