<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true"/>

        <service id="PostNL\Shipments\Service\PostNL\Factory\ApiFactory">
            <argument type="service" id="PostNL\Shipments\Service\Shopware\ConfigService"/>
            <argument type="service" id="postnl_shipments.logger"/>
        </service>

        <service id="PostNL\Shipments\Service\PostNL\LabelService"/>

        <service id="PostNL\Shipments\Service\PostNL\Product\ProductService">
            <argument type="service" id="postnl_shipments_product.repository"/>
            <argument type="service" id="postnl_shipments.logger"/>
        </service>

        <service id="PostNL\Shipments\Service\PostNL\ShipmentService">
            <argument type="service" id="PostNL\Shipments\Service\PostNL\Factory\ApiFactory"/>
            <argument type="service" id="PostNL\Shipments\Service\Shopware\DataExtractor\OrderDataExtractor"/>
            <argument type="service" id="PostNL\Shipments\Service\Shopware\OrderService"/>
            <argument type="service" id="PostNL\Shipments\Service\Shopware\ConfigService"/>
            <argument type="service" id="PostNL\Shipments\Service\PostNL\LabelService"/>
            <argument type="service" id="PostNL\Shipments\Service\PostNL\Product\ProductService"/>
        </service>
    </services>
</container>
