<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true"/>

        <service id="PostNL\Shipments\Service\Shopware\CartService">
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
        </service>

        <service id="PostNL\Shipments\Service\Shopware\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="PostNL\Shipments\Service\Attribute\Factory\AttributeFactory"/>
            <argument type="service" id="postnl_shipments.logger"/>
        </service>

        <service id="PostNL\Shipments\Service\Shopware\CountryService">
            <argument type="service" id="country.repository"/>
            <argument type="service" id="postnl_shipments.logger"/>
        </service>

        <service id="PostNL\Shipments\Service\Shopware\ShippingMethodService">
            <argument type="service" id="delivery_time.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="rule.repository"/>
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\MediaService"/>
            <argument type="service" id="postnl_shipments.logger"/>
        </service>
    </services>
</container>
